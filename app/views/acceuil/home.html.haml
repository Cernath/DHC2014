    %script{:src => "/assets/ui.js"}

:javascript
  handler = Gmaps.build('Google');
  handler.buildMap({ 
      internal: {id: 'map'}
    },
    function() {
       markers =handler.addMarkers(#{@hash.to_json});
       var color;
       var zoom = handler.getMap().getZoom();
       if(zoom < 5 )
       {
          color="#34C924";
       }
       else if(#{@gastro} < 10)
       {
          color="#F4661B";
       }
       else
       {
          color="#FF0000";
       }
       circle_options = { 
          strokeColor: color,
          fillColor: color,
          strokeOpacity: .4,
          fillOpacity: .6,
          clickable: true
       }
       
       handler.addCircles(#{@circle.to_json},circle_options);
       handler.bounds.extendWith(markers);
       handler.map.centerOn({ lat: 48.5, lng: 7.7 }); 
       handler.getMap().setZoom(10);
    }
  ); 


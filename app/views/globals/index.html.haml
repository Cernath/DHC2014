%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
      %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
        %meta{:content => "A layout example with a side menu that hides on mobile, just like the Pure website.", :name => "description"}
          %title Epidemic Detect
          %link{:href => "http://yui.yahooapis.com/pure/0.4.2/pure.css", :rel => "stylesheet"}
          %script{src: "//maps.google.com/maps/api/js?v=3.13&sensor=false&libraries=geometry", type: "text/javascript"}
          %script{src: "//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js", type: "text/javascript"}
          %script{src: "//google-maps-utility-library-v3.googlecode.com/svn/trunk/richmarker/src/richmarker-compiled.js", type: "text/javascript"}
          %link{:href => "/assets/side-menu.css", :rel => "stylesheet"}
  %body
    #layout
      / Menu toggle
      %a#menuLink.menu-link{:href => "#menu"}
        / Hamburger icon
        %span
      #menu
        .pure-menu.pure-menu-open
          %a.pure-menu-heading{:href => "#"} DHC2014
          %ul
            %li.menu-item-divided.pure-menu-selected
              %a{:href => "/"} Carte
            %li
              %a{:href => "/globals/new"} Detect me
            %li
              %a{:href => "#"} Services
            %li
              %a{:href => "/about/index"} A propos
      #main
        .header
          %h1 Epidemic Detect
          %h2 Un sous titre
        .content
          %h2.content-subhead Listing globals

          %table
            %tr
              %th Ville
              %th Departement
              %th Region
              %th Pays
              %th Date
              %th Maladie
              %th
              %th
              %th

            - @globals.each do |global|
              %tr
                %td= global.ville
                %td= global.departement
                %td= global.region
                %td= global.pays
                %td= global.date
                %td= global.maladie
                %td= link_to 'Show', global
                %td= link_to 'Edit', edit_global_path(global)
                %td= link_to 'Destroy', global, :method => :delete, :data => { :confirm => 'Are you sure?' }

          %br

          = link_to 'New Global', new_global_path

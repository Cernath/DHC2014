= form_for @symp do |f|
  - if @symp.errors.any?
    #error_explanation
      %h2= "#{pluralize(@symp.errors.count, "error")} prohibited this symp from being saved:"
      %ul
        - @symp.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :maladie
    = f.collection_select :maladie, Disease.all,:nameDiease, :nameDiease
  .field
    = f.label :symp1
    = f.text_field :symp1
  .field
    = f.label :symp2
    = f.text_field :symp2
  .field
    = f.label :symp3
    = f.text_field :symp3
  .field
    = f.label :symp4
    = f.text_field :symp4
  .field
    = f.label :symp5
    = f.text_field :symp5
  .actions
    = f.submit 'Save'
